{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar C++",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/C",
        "chcp 65001 >nul && g++ -g \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\" -mconsole"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}